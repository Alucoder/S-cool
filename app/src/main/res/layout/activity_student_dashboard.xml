<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StudentDashboard"
    android:background="@drawable/dashboardbg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tvtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/img_dashboard_student_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDashName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Hello Danil"
            android:textColor="@color/colorContext"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_dashboard_student_profile"
            app:layout_constraintLeft_toRightOf="@+id/img_dashboard_student_profile"
            app:layout_constraintTop_toTopOf="@+id/img_dashboard_student_profile" />

        <ImageView
            android:id="@+id/settingSD"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtitlebar"
        android:layout_margin="30dp"
        android:background="@drawable/dashboardbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_sd_subject"
                android:layout_width="95dp"
                android:layout_height="88dp"
                android:clickable="true"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imgBookLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/book" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Subject"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_stdResult"
                android:layout_width="97dp"
                android:layout_height="88dp"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                android:layout_marginHorizontal="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/book"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textColor"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_stdDash_teacher"
                android:layout_width="97dp"
                android:layout_height="88dp"
                app:cardCornerRadius="5dp"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/book"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textColor"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <TextView
            android:id="@+id/tvnotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Notice"
            android:textColor="@color/colorHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_grid" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNoticeSD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvnotice" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>