<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_subject_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="15dp"
        android:layout_marginTop="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_subject_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Science"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_subject_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="25dp"
                android:textColor="@color/textColor"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>