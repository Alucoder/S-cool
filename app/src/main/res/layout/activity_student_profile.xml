<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StudentProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        tools:ignore="MissingConstraints"
        android:background="@color/colorWhite"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/settingSProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/rvRecAchievementsImg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_constraintStart_toEndOf="@+id/img_StudentImage"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvRecTitleProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="@+id/rvRecAchievementsImg"
                app:layout_constraintStart_toStartOf="@+id/rvRecAchievementsImg"
                app:layout_constraintTop_toBottomOf="@+id/rvRecAchievementsImg" />

            <ImageView
                android:id="@+id/img_StudentImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/settings"
                app:layout_constraintEnd_toEndOf="parent"/>
 </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rohit shrma"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorHeading"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtStudentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1024512"
            android:textColor="@color/colorLightContext"
            />
        <TextView
            android:id="@+id/txtStudentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rohit@gmail.com"
            android:textColor="@color/colorLightContext"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/lableemail"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtStudentPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="9856825413"
            android:textColor="@color/colorLightContext"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStudentName"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calendertext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:paddingHorizontal="12dp"
            >
        <TextView
            android:id="@+id/txtCalYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textColor="@color/colorHeading"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/txtCalMonth"/>

        <TextView
            android:id="@+id/txtCalMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textColor="@color/colorContext"
            android:textSize="14sp"
            android:gravity="end|center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            app:compactCalendarCurrentDayBackgroundColor="#bbb"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorPrimaryLight"
            app:compactCalendarMultiEventIndicatorColor="#000"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextColor="#111"
            app:compactCalendarTextSize="12sp" />


    </LinearLayout>
</LinearLayout>

