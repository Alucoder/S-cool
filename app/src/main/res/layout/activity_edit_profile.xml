<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StudentProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        tools:ignore="MissingConstraints"
        android:background="@color/colorWhite"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Id"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorHeading"/>

            <EditText
                android:id="@+id/tvId"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="1254682"
                android:enabled="false"
                android:textColor="@color/colorContext"
                android:background="@color/colorTopBar"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Image"
                android:textColor="@color/colorHeading"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload image"
                android:textColor="@color/colorWhite"
                android:id="@+id/uploadButton"
                android:paddingHorizontal="15dp"
                android:background="@color/colorLightGrey"/>

            <ImageView
                android:id="@+id/ImgProfileChange"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:elevation="1dp"
                android:src="@drawable/usericon"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorHeading"/>

            <EditText
                android:id="@+id/tvNameUpd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Rohit shrma"
                android:textColor="@color/colorContext"
                android:background="@color/colorTopBar"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorHeading"/>

            <EditText
                android:id="@+id/tvEmailUpd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="example@email.com"
                android:textColor="@color/colorContext"
                android:background="@color/colorTopBar"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorHeading"/>

            <EditText
                android:id="@+id/tvPhoneNumberUpd"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="984984523"
                android:textColor="@color/colorContext"
                android:background="@color/colorTopBar"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnDoneEdit"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="50dp"
            android:background="@color/colorLightGrey"/>


    </LinearLayout>

</LinearLayout>

