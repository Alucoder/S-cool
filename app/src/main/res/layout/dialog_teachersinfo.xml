<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="30dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="30dp"
    android:background="@drawable/custombtndashboard">

    <ImageView
        android:id="@+id/img_dialog_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/emma"/>

    <TextView
        android:id="@+id/tv_dialog_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emma Watson"
        android:textSize="28dp"
        android:textColor="@color/colorHeading"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/teacher_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9898562314"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/colorContext"
        />

    <TextView
        android:id="@+id/tv_teacher_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gmail@gmail.com"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/colorContext"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custombtn"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click to send email"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            />

        <ImageView
            android:id="@+id/img_email_teacher"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/send"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custombtn"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="call teacher"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            />

        <ImageView
            android:id="@+id/img_call_teacher"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/call"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>