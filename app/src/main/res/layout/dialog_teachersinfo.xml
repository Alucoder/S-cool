<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_dialog_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/emma"/>

    <TextView
        android:id="@+id/tv_dialog_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="emma watson"/>

    <TextView
        android:id="@+id/teacher_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9898562314"/>

    <TextView
        android:id="@+id/tv_teacher_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gmail@gmail.com"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to send email"/>

    <ImageView
        android:id="@+id/img_email_teacher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/send"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call teacher"/>

    <ImageView
        android:id="@+id/img_call_teacher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/call"/>

</LinearLayout>