<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/colorWhite"
    android:radius="25dp">

    <TextView
        android:id="@+id/tvSrank"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="26sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Ram Shrestha"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSrank"
        app:layout_constraintStart_toEndOf="@+id/tvSrank"
        app:layout_constraintTop_toTopOf="@+id/tvSrank" />

    <RadioGroup
        android:id="@+id/rgAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RadioButton
            android:id="@+id/rdoPresent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Present"
            android:textColor="#20D828"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rdoAbsent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textColor="#D31221"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rdoPresent" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>